<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (articles.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Article</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% articles.forEach((article, index) => { %>
                        <tr>
                            <th scope="row"><%= article.id %></th>
                            <!-- <td><img src="/assets/img/<%= article.image %>" class="rounded-circle article-img" alt=""></td> -->
                            <td>
                                <a href="<%= article.article %>"><%= article.article %></a>
                                
                            </td>
                            <td>
                                <a href="/edit/<%= article.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= article.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No articles found. Go <a href="/add" >here</a> to add articles.</p>
        <% } %>
    </div>
</div>
</body>
</html>
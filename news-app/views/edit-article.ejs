<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (article) { %>
        <form class="add-article-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="article">Article</label>
                    <input type="url" class="form-control" name="article" id="article" value="<%= article.article %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Article</button>
        </form>
    <% } else { %>
        <p class="text-center">Article Not Found. Go <a href="/add">here</a> to add article.</p>
    <% } %>
</div>
<% include partials/footer.ejs %>